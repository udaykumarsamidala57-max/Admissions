<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html>
<head>
    <title>Admission Approval Portal</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <style>
        .container { font-family: 'Segoe UI', sans-serif; padding: 20px; }
        .filter-section { margin-bottom: 20px; background: #f4f4f4; padding: 15px; border-radius: 8px; }
        
        /* Badge/Card Styling */
        .student-badge {
            display: inline-block;
            width: 280px;
            border: 1px solid #ddd;
            border-radius: 12px;
            padding: 15px;
            margin: 10px;
            background: #fff;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            vertical-align: top;
            transition: transform 0.2s;
        }
        .student-badge:hover { transform: translateY(-5px); }
        .student-name { font-weight: bold; color: #2c3e50; font-size: 1.1em; display: block; margin-bottom: 5px;}
        .student-info { font-size: 0.85em; color: #666; margin-bottom: 10px; }
        .total-marks { font-size: 1.2em; color: #27ae60; font-weight: bold; }
        
        .approve-btn {
            background-color: #007bff;
            color: white;
            border: none;
            padding: 8px 15px;
            border-radius: 5px;
            cursor: pointer;
            width: 100%;
            margin-top: 10px;
        }
        .approve-btn:disabled { background-color: #ccc; }
        .hidden-source { display: none; }
    </style>
</head>
<body>

<div class="container">
    <h2>ðŸŽ“ Admission Approval (Filtered by Marks)</h2>

    <div class="filter-section">
        <label>Class ID:</label>
        <input type="number" id="classId" value="1">
        <label>Exam Date:</label>
        <input type="text" id="examDate" placeholder="DD-MM-YYYY" value="05-02-2026">
        <button onclick="loadStudents()">Load Students</button>
    </div>

    <div id="badgeContainer"></div>

    <div id="rawOutput" class="hidden-source"></div>
</div>

<script>
function loadStudents() {
    const classId = $('#classId').val();
    const examDate = $('#examDate').val();
    const container = $('#badgeContainer');
    
    container.html('<p>Processing students...</p>');

    // Call your existing servlet
    $('#rawOutput').load('LoadStudentsAndExamsServlet?class_id=' + classId + '&exam_date=' + examDate, function(response, status, xhr) {
        if (status == "error") {
            container.html("<p style='color:red'>Error loading data.</p>");
            return;
        }

        container.empty();
        
        // Parse the table generated by the servlet
        const rows = $('#rawOutput table.marksTable tbody tr');
        let count = 0;

        rows.each(function() {
            const row = $(this);
            const enqId = row.find('td:eq(1)').text();
            const appNo = row.find('td:eq(2)').text();
            const name = row.find('td:eq(3)').text();
            const totalMarks = parseInt(row.find('.totalBox').val()) || 0;

            // FILTER: Only show if marks are not empty/zero
            if (totalMarks > 0) {
                count++;
                const badgeHtml = `
                    <div class="student-badge" id="badge-${enqId}">
                        <span class="student-name">\${name}</span>
                        <div class="student-info">
                            <strong>App No:</strong> \${appNo}<br>
                            <strong>Enquiry ID:</strong> \${enqId}
                        </div>
                        <div class="total-marks">Score: \${totalMarks}</div>
                        <button class="approve-btn" onclick="approveAdmission(\${enqId})">
                            Approve Admission
                        </button>
                    </div>
                `;
                container.append(badgeHtml);
            }
        });

        if (count === 0) {
            container.html("<p>No students found with marks for this criteria.</p>");
        }
    });
}

function approveAdmission(enqId) {
    if(!confirm("Approve admission for ID: " + enqId + "?")) return;

    // AJAX to update status (You would create a small handler for this)
    $.ajax({
        url: 'UpdateAdmissionStatusServlet', // Create this to handle update
        type: 'POST',
        data: { enquiry_id: enqId, status: 'Finalized' },
        success: function(res) {
            alert("Admission Approved Successfully!");
            $(`#badge-\${enqId}`).fadeOut(); // Remove the badge from UI
        },
        error: function() {
            alert("Error updating status.");
        }
    });
}
</script>

</body>
</html>